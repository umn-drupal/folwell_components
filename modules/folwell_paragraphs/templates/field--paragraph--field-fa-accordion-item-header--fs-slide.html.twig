{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'clearfix',
    'text-formatted'
  ]
%}

<header>
  {% for item in items %}
  <h1{{ attributes.addClass(classes, 'field__item') }}>{{ item.content }}</h1>
  {% endfor %}
</header>