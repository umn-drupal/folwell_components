function _folwell_paragraphs_a11y_paragraph_label_update() {
  $configs = [
    'paragraphs.paragraphs_type.a11y_paragraphs_tab_content',
    'paragraphs.paragraphs_type.a11y_paragraphs_tabs_panel',
    'paragraphs.paragraphs_type.a11y_paragraphs_tabs_wrapper',
  ];
  $config_factory = \Drupal::configFactory();
  foreach ($configs as $config) {
    $editable = $config_factory->getEditable($config);
    $label = $editable->get('label');
    $editable->set('label', str_replace('A11Y Paragraphs', 'Folwell', $label));
    $editable->save();
  }
}

function _folwell_paragraphs_config_filter($item, $config_type) {
  if (strpos($item, $config_type . '.') === 0) {
    return true;
  }
  return false;
}